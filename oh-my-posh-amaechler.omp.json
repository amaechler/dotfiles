{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "root",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#26C6DA",
                    "background": "#546E7A"
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#26C6DA",
                    "background": "#546E7A",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#D4E157",
                    "background": "#546E7A",
                    "properties": {
                        "prefix": "<#26C6DA>\uE0B1 </>", // nf-pl-left_soft_divider
                        "display_stash_count": true
                    }
                },
                {
                    "type": "executiontime",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#ffffff",
                    "background": "#8800dd",
                    "properties": {
                        "threshold": 500,
                        "style": "austin"
                    }
                }
            ]
        },
        {
            "type": "newline"
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "#D4E157",
                    "properties": {
                        "prefix": "‚ùØ",
                        "always_enabled": true,
                        "error_color": "#FF5252",
                        "display_exit_code": false
                    }
                }
            ]
        }
    ]
}
