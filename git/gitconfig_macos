[include]
    path = ~/Development/Personal/dotfiles/git/gitconfig
[alias]
	prune-branches = "!git remote prune origin && git branch -vv | grep ': gone]' | awk '{if ($1 ~ /^[*+]$/) print $2; else print $1}' | xargs -n 1 git branch -D"
