{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": " \uf0e7 ",
          "foreground": "#26C6DA",
          "powerline_symbol": "\ue0b0",
          "background": "#546E7A",
          "type": "root",
          "style": "powerline"
        },
        {
          "options": {
            "style": "full"
          },
          "template": " {{ .Path }} ",
          "foreground": "#26C6DA",
          "powerline_symbol": "\ue0b0",
          "background": "#546E7A",
          "type": "path",
          "style": "powerline"
        },
        {
          "options": {
            "fetch_status": true
          },
          "template": "<#26C6DA>\ue0b1 </>{{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0}} \udb80\udd93 {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }} ",
          "foreground": "#D4E157",
          "powerline_symbol": "\ue0b0",
          "background": "#546E7A",
          "type": "git",
          "style": "powerline"
        },
        {
          "options": {
            "style": "austin",
            "threshold": 500
          },
          "template": " {{ .FormattedMs }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#8800dd",
          "type": "executiontime",
          "style": "powerline"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "options": {
            "always_enabled": true
          },
          "template": "‚ùØ ",
          "foreground": "#D4E157",
          "type": "exit",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#FF5252{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 4
}
