// Place your settings in this file to overwrite the default settings
{
    "diffEditor.renderIndicators": false,
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": true,

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.renderWhitespace": "all",
    "editor.rulers": [120],
    "editor.unicodeHighlight.allowedCharacters": {
        "Ã—": true
    },
    
    "explorer.confirmDragAndDrop": false,

    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": false,

    "files.associations": {
        "*.powershell": "powershell",
        "*.css": "css"
    },

    "git.autofetch": true,

    "telemetry.telemetryLevel": "off",

    "terminal.external.windowsExec": "wt.exe",
    "terminal.integrated.profiles.windows": {
        "PowerShell (Core)": {
            "path": "C:\\Users\\${env:USERNAME}\\scoop\\apps\\pwsh\\current\\pwsh.exe",
            "args": ["-NoLogo"],
            "overrideName": true
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell (Core)",
    "terminal.integrated.fontFamily": "CaskaydiaCove NF",

    "typescript.updateImportsOnFileMove.enabled": "always",

    "workbench.activityBar.visible": true,
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.revealIfOpen": false,
    "workbench.startupEditor": "newUntitledFile",

    // language formatters
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // settings for extensions below
    "csharp.suppressDotnetRestoreNotification": true,

    "eslint.lintTask.enable": true,
    "eslint.packageManager": "yarn",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html"
    ],

    "gitlens.advanced.fileHistoryFollowsRenames": true,
    "gitlens.advanced.messages": {
        "suppressFileNotUnderSourceControlWarning": true,
        "suppressRebaseSwitchToTextWarning": true
    },
    "gitlens.advanced.similarityThreshold": 95,
    "gitlens.keymap": "chorded",

    "liveshare.guestApprovalRequired": true,

    "mssql.format.alignColumnDefinitionsInColumns": true,
    "mssql.format.datatypeCasing": "uppercase",
    "mssql.format.keywordCasing": "uppercase",
    "mssql.format.placeSelectStatementReferencesOnNewLine": true,

    "omnisharp.defaultLaunchSolution": "",

    "openapi.securityAuditToken": "CiAqJNhWdr2iRK/wCWbCtHYuMHbaGtec0ojiGtPOkCCFkhIY0HOdRZLeeB6VikdvwAaVcD8tyxhDx954GnLJLra6VgjQ8oj3ODSq83+OD9eXozJrgvGw/jRYnrYYEmSqKHZvL/GxIpTJiSCrvkyJgiPPTzLvbz0TePWZ5ipseVJhfCc/CAV1m+wvF6nT+avbjGPdgQWXPue9E8eIOAwE9WIOdzF5dcObNzYyusgQJwc=",

    "powershell.integratedConsole.showOnStartup": false,

    "prettier.tabWidth": 4,

    "todo-tree.highlights.enabled": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "todo",
        "[ ]",
        "[x]"
    ],

    "redhat.telemetry.enabled": false,

    "wallaby.showUpdateNotifications": false
}
